            focused_workspace #d899b7 #d899b7 #fafafa
            active_workspace #5294e2 #5294e2 #fafafa
            inactive_workspace #a56b87 #a56b87 #fafafa
            urgent_workspace #ff5757 #ff5757 #fafafa
        }
}

